	<script type="module">
		const navToggle = document.querySelector(".nav-toggle");
		const primaryNav = document.querySelector("#primary-nav");
		const bioToggleEs = document.querySelector("#bio-toggle-es");
		const bioToggleEn = document.querySelector("#bio-toggle-en");
		const bioTextEs = document.querySelector("#bio-text-es");
		const bioTextEn = document.querySelector("#bio-text-en");

		const toggleNavigation = () => {
			if (!navToggle || !primaryNav) return;
			const expanded = navToggle.getAttribute("aria-expanded") === "true";
			const next = !expanded;
			navToggle.setAttribute("aria-expanded", String(next));
			primaryNav.classList.toggle("is-open", next);
		};

		const setBioLanguage = (language) => {
			if (!bioToggleEs || !bioToggleEn || !bioTextEs || !bioTextEn) return;
			const isSpanish = language === "es";
			bioToggleEs.setAttribute("aria-pressed", String(isSpanish));
			bioToggleEn.setAttribute("aria-pressed", String(!isSpanish));
			if (isSpanish) {
				bioTextEs.removeAttribute("hidden");
				bioTextEn.setAttribute("hidden", "true");
			} else {
				bioTextEn.removeAttribute("hidden");
				bioTextEs.setAttribute("hidden", "true");
			}
		};

		bioToggleEs?.addEventListener("click", () => setBioLanguage("es"));
		bioToggleEn?.addEventListener("click", () => setBioLanguage("en"));
		navToggle?.addEventListener("click", toggleNavigation);
		setBioLanguage("es");
	</script>
