const fallbackEventImage =
	"https://images.unsplash.com/photo-1524230572899-a752b3835840?auto=format&fit=crop&w=1400&q=80";

const parseAgendaDate = (dateStr: string, timeStr?: string) => {
	if (!dateStr) return null;
	const [year, month, day] = dateStr.split("-").map(Number);
	if (!year || !month || !day) return null;
	const [hour = 0, minute = 0] = (timeStr ?? "").split(":").map(Number);
	return new Date(year, month - 1, day, hour || 0, minute || 0);
};

const formatMonthShort = (date?: Date | null) =>
	date
		?.toLocaleDateString("es-ES", { month: "short" })
		.replace(".", "")
		.toUpperCase();

const formatLongDate = (date?: Date | null) =>
	date
		? date.toLocaleDateString("es-ES", {
				weekday: "long",
				day: "numeric",
				month: "long",
				year: "numeric",
		  })
		: "Fecha por confirmar";

const normalizeLocation = (value?: string | null) => {
	const trimmed = value?.trim() ?? "";
	if (!trimmed) {
		return { venue: "", city: "", summary: "" };
	}

	const parts = trimmed.split(",").map((part) => part.trim()).filter(Boolean);
	if (parts.length === 0) {
		return { venue: "", city: "", summary: "" };
	}

	if (parts.length === 1) {
		return { venue: parts[0], city: "", summary: parts[0] };
	}

	const venue = parts[0];
	const city = parts.slice(1).join(", ");
	return {
		venue,
		city,
		summary: city || venue,
	};
};

const storedAgendaData = (await readEvents()).filter((event) => Boolean(event?.title));

const agendaEvents = storedAgendaData
	.map((event) => {
		const title = event.title?.trim() || "Evento por confirmar";
		const dateObj = parseAgendaDate(event.date, event.time);
		const longDate = formatLongDate(dateObj);
		const shortDate = dateObj
			? dateObj.toLocaleDateString("es-ES", { day: "2-digit", month: "short" }).replace(".", "")
			: "";
		const timeLabel =
			dateObj && event.time
				? dateObj.toLocaleTimeString("es-ES", { hour: "2-digit", minute: "2-digit" })
				: event.time?.trim() ?? "";
		const { city, venue, summary } = normalizeLocation(event.location);

		return {
			...event,
			title,
			image: event.image?.trim() || fallbackEventImage,
			description: event.description?.trim() ?? "",
			location: event.location?.trim() ?? "",
			city,
			venue,
			locationSummary: summary,
			locationDetail: [venue, city].filter(Boolean).join(" · "),
			dateObj,
			dayLabel: dateObj ? String(dateObj.getDate()).padStart(2, "0") : "--",
			monthLabel: formatMonthShort(dateObj) ?? "",
			longDate,
			shortDate,
			timeLabel,
		};
	})
	.sort((a, b) => {
		const aTime = a.dateObj?.getTime();
		const bTime = b.dateObj?.getTime();

		if (typeof aTime === "number" && typeof bTime === "number") {
			return aTime - bTime;
		}
		if (typeof aTime === "number") return -1;
		if (typeof bTime === "number") return 1;
		return a.title.localeCompare(b.title);
	});

const today = new Date();
today.setHours(0, 0, 0, 0);

const upcomingEvents = agendaEvents.filter((event) => {
	const timestamp = event.dateObj?.getTime();
	return typeof timestamp === "number" && timestamp >= today.getTime();
});

const nextAgendaEvent = upcomingEvents[0] ?? agendaEvents[0] ?? null;

const heroNextEventText = nextAgendaEvent
	? buildHeroLine(nextAgendaEvent)
	: "Consulta la agenda para conocer la próxima fecha confirmada.";

function buildHeroLine(event: (typeof agendaEvents)[number]) {
	const details = [
		event.shortDate,
		event.timeLabel,
		event.locationDetail || event.locationSummary || event.city || event.venue,
	].filter(Boolean);

	return details.length ? `${event.title} · ${details.join(" · ")}` : event.title;
}

